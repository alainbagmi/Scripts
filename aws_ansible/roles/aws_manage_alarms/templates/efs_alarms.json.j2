{   
    "AlarmName": "{{ ec2_id }}-{{ name }}-{{ efs_env }}-{{ alarm_metric }}",
    "AlarmDescription": "Error-{{ efs_env }}-{{ alarm_metric }}-statusUnresponsive",
    "ActionsEnabled": true,
    "AlarmActions": [
        "arn:aws-us-gov:sns:us-gov-west-1:626894281569:WCMMonitoring"
    ],
    "MetricName": "{{ alarm_metric }}",
    "Namespace": "EFSMount",
    "Statistic": "Minimum",
