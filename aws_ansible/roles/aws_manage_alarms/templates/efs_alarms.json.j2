    "Tags": [
        {"Key": "Name", "Value": "{{ ec2_id }}-{{ name }}-{{ efs_env }}-{{ alarm_metric }}"},
        {"Key": "image_id", "Value": "{{ image_id }}"},
        {"Key": "Purpose", "Value": "{{ ec2_purpose }}"},
        {"Key": "environment", "Value": "{{ efs_env }}"},
        {"Key": "fisma_id", "Value": "{{ fisma_id }}"},
        {"Key": "project", "Value": "{{ project }}"}
    ],
}